{
    "version": 2,
    "builds": [
      { "src": "api/*.js", "use": "@vercel/node" }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "/api/$1" }
    ],
    "rewrites": [
      { "source": "/jobs", "destination": "/api/jobs" },
      { "source": "/jobs/:id", "destination": "/api/jobs/:id" }
    ],
    "crons": [
      {
        "path": "/api/scraper",
        "schedule": "0 0 * * *"
      }
    ]
  }
  